@using Microsoft.AspNetCore.Identity
@using VideoGameSystem.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-inline">
        <button type="submit" class="btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="btn btn-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
}
